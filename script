killall gpg-agent
rm -rf /etc/pacman.d/gnupg/
pacman-key --init
pacman-key --populate
pacman -Sy archlinux-keyring --noconfirm
pacman -S vim base-devel grub reflector networkmanager git xdg-utils xdg-user-dirs --noconfirm
systemctl enable NetworkManager
reflector --country Czechia --save /etc/pacman.d/mirrorlist
ln -sf /usr/share/zoneinfo/Europe/Warsaw /etc/localtime
hwclock --systohc
sed -i '/pl_PL.UTF-8/s/^#//g' /etc/locale.gen
locale-gen
echo "KEYMAP=en" > /etc/vconsole.conf
echo "LANG=pl_PL.UTF-8" > /etc/locale.conf
read -p "Podaj nazwe komputera: " hostname
read -p "Podaj nazwe uzytkownika: " username
useradd -m $username
passwd $username
usermod -aG wheel $username
sed -i '/%wheel ALL=(ALL:ALL) ALL/s/^#//g' /etc/sudoers
echo "$hostname" > /etc/hostname
mkinitcpio -P
PS3="UEFI/BIOS?: "
options=("UEFI" "BIOS")
select opt in "${options[@]}"
do
    case $opt in
        "UEFI")
    pacman -S grub efibootmgr --noconfirm
    while [[ $efidir != /dev/sd[a-z][1-9] ]]; do
    read -p "Specify EFI partition location (e.g. /dev/sda1): " efidir
    [[ $grubdir == /dev/sd[a-z][1-9] ]] || echo "Invalid format"
    done
    mount --mkdir "$efidir" /boot/efi
    genfstab -U
    grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=archlinux
    grub-mkconfig -o /boot/grub/grub.cfg
    break
    ;;
        "BIOS")
    pacman -S grub --noconfirm
    while [[ $grubdir != /dev/sd[a-z] ]]; do
    read -p "Specify the path of the disk on which grub is to be installed (e.g. /dev/sda): " grubdir
    [[ $grubdir == /dev/sd[a-z] ]] || echo "Invalid format"
    done
    grub-install --target=i386-pc "$grubdir"
    grub-mkconfig -o /boot/grub/grub.cfg
    break
    ;;    
        *)
    echo "Invalid option"
    ;;
esac
done

PS3="Which audio server should be installed?: "
options=("Pipewire" "Pulseaudio" "None")
select opt in "${options[@]}"
do
    case $opt in
        "Pipewire")
    pacman -S pipewire pipewire-pulse pipewire-alsa pipewire-jack wireplumber pavucontrol --noconfirm
    systemctl enable --global pipewire
    systemctl enable --global pipewire-pulse
    break
    ;;
        "Pulseaudio")
    pacman -S pulseaudio pulseaudio-alsa pulseaudio-jack pulseaudio-bluetooth pulseaudio-zeroconf pulseaudio-lirc pavucontrol --noconfirm
    systemctl enable --global pulseaudio
    break
    ;;
        "None")
    break
    ;;
        *)
    echo "Invalid format"
    ;;
esac
done

PS3="Which graphics driver should be installed?: "
options=("NVIDIA" "AMD" "Intel" "Nouveau (open-source NVIDIA driver)")
select opt in "${options[@]}"
do
    case $opt in
        "NVIDIA")
    pacman -S nvidia nvidia-utils nividia-settings --noconfirm
    break
    ;;
        "AMD")
    pacman -S mesa xf86-amdgpu --noconfirm
    break
    ;;
        "Intel")
    pacman -S mesa xf86-video-intel --noconfirm
    break
    ;;
        "Nouveau (open-source NVIDIA driver)")
    pacman -S mesa xf86-video-nouveau --noconfirm
    break
    ;;
        "None")
    break
    ;;
        *)
    echo "Invalid option"
    ;;
esac
done

PS3="Which desktop environment should be installed?: "
options=("KDE Plasma" "XFCE" "MATE" "Cinnamon" "GNOME" "None")
select opt in "${options[@]}"
do
    case $opt in
        "KDE Plasma")
    pacman -S plasma sddm gwenview kate noto-fonts noto-fonts-emoji noto-fonts-cjk xorg xorg-server --noconfirm
    systemctl enable sddm
    sed 's/Current=/Current=breeze/g' /usr/lib/sddm/sddm.conf.d/default.conf
    sed 's/CursorTheme=/CursorTheme=breeze/g' /usr/lib/sddm/sddm.conf.d/default.conf
    break
    ;;
        "XFCE")
    pacman -S xfce4 xfce4-whiskermenu-plugin xfce4-terminal xfce4-dev-tools xfce4-screenshooter lightdm lightdm-gtk-greeter xorg xorg-server gvfs thunar thunar-volman network-manager-applet noto-fonts noto-fonts-emoji noto-fonts-cjk xorg xorg-server --noconfirm
    systemctl enable lightdm
    break
    ;;
        "MATE")
    pacman -S mate mate-extra lightdm lightdm-gtk-greeter noto-fonts noto-fonts-emoji noto-fonts-cjk xorg xorg-server --noconfirm
    systemctl enable lightdm
    break
    ;;
        "Cinnamon")
    pacman -S cinnamon cinnamon-translations lightdm lightdm-slick-greeter noto-fonts noto-fonts-emoji noto-fonts-cjk xorg xorg-server --noconfirm
    systemctl enable lightdm
    break
    ;;
        "GNOME")
    pacman -S gnome gdm noto-fonts noto-fonts-emoji noto-fonts-cjk xorg xorg-server --noconfirm
    systemctl enable gdm
    break
    ;;
        "None")
    break
    ;;
        *)
    echo "Invalid option"
    ;;
esac
done
read -p "Additional packages: " packages
pacman -S "$packages" --noconfirm
while true
    do
    read -p "Arch was installed successfully. Do you want to reboot? [y/n] " yn
    case $yn in
        [Yy]* ) umount -a && reboot;;
        [Nn]* ) break;;
        * ) echo "Invalid option";;
    esac
    done
