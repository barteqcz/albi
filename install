#!/bin/bash
    
    while true
    do
    read -p "Before starting the script, it is necessary to manually, arbitrarily, but correctly partition the disk. Do you want to continue? [t/n] " tn
    case $yn in
        [Tt]* ) break;;
        [Nn]* ) exit && cfdisk;;
        * ) echo "Invalid option";;
    esac
    done
pacstrap -K /mnt base linux linux-firmware
cp script /mnt/script
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt bash script
